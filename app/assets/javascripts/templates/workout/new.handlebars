<h2>New workout</h2>
<form role="form">
  <div class="form-group">
    <label for="inputName">Name</label>
    {{input type="text" value=name placeholder="Workout name" class="form-control" id="inputName"}}
  </div>
  <div class="form-group">
    <label for="inputDescription">Description</label>
    {{input type="text" value=description placeholder="Workout description" class="form-control" id="inputDescription"}}
  </div>
  <div class="form-group">
    <label>Exercises</label>

  </div>
  
  <button {{action "cancel" model}} class="btn btn-default" data-dismiss="modal">Cancel</button>
  <button {{action "create" model}} {{bind-attr class=":btn :btn-primary"}}>Create</button>
</form>
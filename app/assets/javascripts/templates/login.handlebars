<h2>Login</h2>
{{#if loggedIn}}
    <p>You are already logged in!</p> <button {{action "logout" }} class="btn btn-default">Log out</button>
{{else}}
    <form role="form">
        <div class="form-group">
          <label for="inputEmail">Email address</label>
          {{input value=email type="text" placeholder="Email" class="form-control" id="inputEmail"}}
        </div>
        <div class="form-group">
          <label for="inputPassword">Password</label>
          {{input value=password type="password" placeholder="Password" class="form-control" id="inputPassword"}}
        </div>
        <button {{action "login" }} class="btn btn-default">Log in</button>
    </form>
    {{#if errorMessage}}
      <div class="alert alert-error">{{errorMessage}}</div>
    {{/if}}
{{/if}}



